<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <h1><%= t('.test_was_completed',title: @response.test.title) %></h1>
    <div class="progress">
      <div class="progress-bar bg-warning" role="progressbar" style="width:100%" aria-valuenow="0" aria-valuemin="20" aria-valuemax="100"></div>
    </div>
    <p><%= t('.correct_questions') %>
    <b>
    <% if result_success? %>
       <font color="green"> <%= test_result %>%</font></b>. <%= t('.test_passed') %>
    <% else %>
       <font color="red"> <%= test_result %>%</font></b>. <%= t('.test_not_passed') %>
    <% end %>
    </p>
    <%= link_to t('.tests'), tests_path %>
  </div>
</div>
