<tr>
  <td><%= badge.name %></td>
  <td><%= badge.file_name %></td>
  <td><%= image_tag("#{badge.file_name}") %></td>
  <td><%= link_to t('.edit'), edit_admin_badge_path(badge), class: "btn btn-primary"  %></td>
  <td><%= link_to t('.delete'),
                   admin_badge_path(badge),
                   method: :delete,
                   data: { confirm: t('.are_you_sure') }, class: "btn btn-primary" %></td>
</tr>
