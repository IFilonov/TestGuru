<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h2 align=center><%= t('.question') %></h2>
    <div class="card border-primary">
      <p><%= @question.body %></p>
      <h2 align=center><%= t('.answers') %>:</h2>
      <%= link_to t('.new_answer'), new_admin_question_answer_path(@question) %>
      <ol>
        <%= render @question.answers %>
      </ol>
      <%= link_to t('.edit'), edit_admin_question_path(@question) %>
      <%= link_to t('.back'), admin_test_path(@question.test) %>
    </div>
  </div>
</div>
